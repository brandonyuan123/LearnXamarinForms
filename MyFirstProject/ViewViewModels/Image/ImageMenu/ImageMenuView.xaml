<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Image.ImageMenu.ImageMenuView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>

            <Button Grid.Row="0" Grid.Column="0" Text="Image URI"
                        Command="{Binding OnImageURIClicked}"/>
            <Button Grid.Row="1" Grid.Column="0" Text="Embedded Image"
                        Command="{Binding OnEmbeddedImageClicked}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>