<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Layout.LayoutView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Layout Menu"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        

        <Button Grid.Row="0" Grid.Column="0" Text="Absolute"
                        Command="{Binding OnAbsoluteClicked}"/>
            <Button Grid.Row="4" Grid.Column="0" Text="Absolute Page"
                        Command="{Binding OnAbsolutePageClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>