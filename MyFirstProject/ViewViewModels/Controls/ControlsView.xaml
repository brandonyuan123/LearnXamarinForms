<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Controls.ControlsView"
             Title="{Binding Title}">

    <StackLayout>
        <Button Text="Slider"
                Command="{Binding OnSliderClicked}"/>
        <Button Text="Stepper"
                Command="{Binding OnStepperClicked}"/>
        <Button Text="Switch"
                Command="{Binding OnSwitchClicked}"/>
        <Button Text="Double Switch"
                Command="{Binding OnDoubleSwitchClicked}"/>
        <Button Text="Entry"
                Command="{Binding OnEntryClicked}"/>
    </StackLayout>
</ContentPage>