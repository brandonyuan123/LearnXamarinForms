<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:model="clr-namespace:MyFirstProject.Models"
			 x:Class="MyFirstProject.ViewViewModels.ListView.ListMenu.DisplayImages.DisplayImagesView"
			 Title="{Binding Title}">

    <StackLayout>
        <Label Text="World Leaders"
			   TextColor="Black"
			   FontAttributes="Bold"
			   FontSize="20"
			   TranslationY="10"
			   HorizontalTextAlignment="Center"
			   />

        <CollectionView x:Name="ItemsListView"
								ItemsSource="{Binding PersonsCollection}"
								SelectionMode="None"
								ItemsLayout="VerticalList">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Grid Padding="10" Margin="12">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout  Padding="10" x:DataType="model:Person" x:Name="PersonNames">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="500"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding URI}"
									   Grid.Column="0"
									   Aspect="AspectFit"/>

                                <Label Text="{Binding Name}"
									   Grid.Column="1"
									   Grid.Row="0"
									   LineBreakMode="NoWrap"
									   FontSize="16"
									   FontAttributes="Bold"
									   TextColor="Teal"/>

                                <Label Text="{Binding Subtitle}"
									   Grid.Column="1"
									   Grid.Row="0"
									   LineBreakMode="NoWrap"
									   FontSize="14"
									   FontAttributes="none"
									   TextColor="CornflowerBlue"
									   VerticalTextAlignment="Start"
									   TranslationY="25"/>

                            </Grid>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>