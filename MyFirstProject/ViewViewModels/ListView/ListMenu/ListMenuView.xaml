<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.ListView.ListMenu.ListMenuView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Button Grid.Row="0" Grid.Column="0" Text="Display People"
                        Command="{Binding OnDisplayPeopleClicked}"/>
            
            <Button Grid.Row="1" Grid.Column="0" Text="Display Images"
                        Command="{Binding OnDisplayImagesClicked}"/>
            
            <Button Grid.Row="2" Grid.Column="0" Text="Movie Buttons"
                        Command="{Binding OnMovieButtonsClicked}"/>

            <Button Grid.Row="2" Grid.Column="0" Text="Icon Buttons"
                        Command="{Binding OnIconButtonsClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>